---
import type { Frontmatter } from '../config'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import { DefaultImage, DefaultSVG } from '../config'

export interface Props {
  frontmatter: {
    layout: string
    title: string
    description: string
    publishDate: string
    coverSVG: string
    socialImage: string
    firstItemPadding?: boolean
    }

}
const firstItemPadding = true
const { frontmatter } = Astro.props

const images = import.meta.glob<ImageMetadata>('../assets/**/*', {
  import: 'default'
})
const coverSVG = (await images[frontmatter.coverSVG]()) || DefaultSVG
const socialImage = (await images[frontmatter.socialImage]()) || DefaultImage

const fm: Frontmatter = {
  title: frontmatter.title,
  description: frontmatter.description,
  publishDate: new Date(frontmatter.publishDate),
  coverSVG: coverSVG,
  socialImage: socialImage
}
---

<Base frontmatter={fm}>
  <main class='dark:bg-gray-900'>
    <article class='post'>
      <header>
        <PageHero
          title={frontmatter.title}
          description={frontmatter.description}
          coverSVG={coverSVG}
          socialImage={socialImage}
        />
      </header>
      <section
        class='prose prose-sky mx-auto my-8 max-w-screen-lg px-4 dark:prose-invert lg:prose-xl lg:px-0'
      >
      <main
      class={firstItemPadding && '[&>:first-child]:pt-24 [&>:first-child]:md:pt-28'}
  >
      <slot />
  </main>
) : (
  <slot />
)
      </section>
    </article>
  </main>
</Base>
